<script>
async function guard() {
  try {
    const r = await fetch('/api/me', { credentials: 'include' });
    if (!r.ok) { 
      location.href = '/login?next=' + encodeURIComponent(location.pathname);
      return;
    }
    const me = await r.json();

    // Affiche email et rôle
    document.getElementById('user-info').textContent = `${me.email || me.identifiant || ''} (${me.role})`;

    // Met à jour le menu
    updateMenu(me);
  } catch (err) {
    console.error('Erreur guard:', err);
  }
}

function updateMenu(user) {
  const navItems = [
    { title: "Se connecter", href: "/login" },
    { title: "S'inscrire", href: "/register" },
    { title: "Mes cartes", href: "/cartes" },
    { title: "Changer de mot de passe", href:"/app/password" },
    ...(user.role === 'admin' ? [
      { title: "Liste d'utilisateurs", href:"/admin/users" },
      { title: "Admin", href: "/admin" }
    ] : [])
  ];

  const buildMenu = items => items.map(item => `
    <li class="mx-auto flex items-center justify-center">
      <a class="relative px-1 py-1 after:absolute after:bottom-0 after:left-0 after:z-50 after:h-[3px] after:w-0 after:rounded-full after:bg-blue-900 after:duration-500 hover:after:w-full"
         href="${item.href}">${item.title}</a>
    </li>
  `).join('');

  // Menu desktop et mobile
  document.getElementById('nav-list').innerHTML = buildMenu(navItems);
  document.getElementById('mobile-nav').innerHTML = buildMenu(navItems);
}

// Initialisation
guard();

// Gestion du menu mobile
document.getElementById('menu-toggle').addEventListener('click', () => {
  const mobileMenu = document.getElementById('mobile-nav');
  const isHidden = mobileMenu.classList.contains('hidden');
  mobileMenu.classList.toggle('hidden', !isHidden);
});

</script>
