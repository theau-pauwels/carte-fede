---
import { Image } from "astro:assets";

interface Props {
  title?: string;
  list: {
    name: string;
    href: string;
    image: ImageMetadata;
    color?: string;
  }[];
}

const { title, list } = Astro.props;
---

<section id={title} class="space-y-3">
  {title && <h2 class="text-xl font-semibold">{title}</h2>}
  <ul
    class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4"
  >
    {
      list.map((item) => (
        <li class="shadow-box relative aspect-[3/2] overflow-hidden rounded-2xl duration-150 hover:opacity-80">
          <a href={item.href}>
            <>
              <Image
                class="-z-10 h-full object-cover"
                src={item.image}
                alt={item.name}
                quality={30}
                format="webp"
              />
              <h3 class="absolute bottom-3 left-4 w-[calc(100%_-_2rem)] text-xl font-medium text-white drop-shadow-normal">
                {item.name}
              </h3>
            </>
          </a>
        </li>
      ))
    }
  </ul>
</section>