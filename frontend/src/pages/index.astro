---
let apiStatus = 'unknown';
try {
  // Appel direct au service Docker du backend (pas via Nginx)
  const r = await fetch('http://backend:8000/api/auth/logout', { method: 'POST' });
  apiStatus = `HTTP ${r.status}`;
} catch (e) {
  apiStatus = `down`;
}
---
<html>
  <body>
    <h1>Astro OK</h1>
    <p>API backend : {apiStatus}</p>
  </body>
</html>
